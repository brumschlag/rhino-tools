Connection( 
	"NorthwindConnection",
	ConnectionType: SqlConnection,
	ConnectionString: "Data Source=localhost;Initial Catalog=Northwind; Integrated Security=SSPI;"
	)

Source Northwind, Connection="NorthwindConnection":
	Command: "SELECT * FROM Customers"
	
	Parameters:
		@LastUpdate = date.Today.AddDays(-1)
		@ChangingParameter = date.Now.Ticks
		@CurrentTime = ExecuteScalar("NorthwindConnection", "SELECT sysdate from dual")
		@ExplicitCallable = def:
			if DataSource.Current.Items["callable_executed"] is null:
				DataSource.Current.Items["callable_executed"] = true
				return false;
			return true
		
Source WithGenerator:
	CommandGenerator: "SELECT * FROM Customers WHERE Date >= '${date.Today}' "
	
source ComplexGenerator:
	CommandGenerator:
		if Environment.GetEnvironmentVariable("production"):
			return "SELECT * FROM Production.Customers"
		else:
			return "SELECT * FROM Test.Customers"